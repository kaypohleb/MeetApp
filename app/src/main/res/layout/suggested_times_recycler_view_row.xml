<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/rvrow_free_time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/2019 10:00"
            android:gravity="center"
            android:fontFamily="@font/productsans_bold"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:text="to"
            android:gravity="center"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/rvrow_free_time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/2019 10:00"
            android:fontFamily="@font/productsans_bold"
            android:gravity="center"
            android:textSize="18dp" />



    </LinearLayout>
    <TextView
        android:id="@+id/rvrow_free_time_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.5 hours 23 mins"
        android:textSize="13sp" />
    <TextView
        android:id="@+id/rvrow_absentees"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rvrow_free_time_start"

        android:text="15 Absentees: Apple, Banana, Cow, Dog..."
        android:textSize="13sp"
        android:gravity="start"
        android:layout_width="match_parent" />
</LinearLayout>










</androidx.cardview.widget.CardView>